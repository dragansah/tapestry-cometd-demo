<html t:type="layout" title="Stocks"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">

	<table>
		<tr>
			<td>GOOG</td><td><t:cometd.PushTarget topic="stocks/GOOG" event="stockPriceReceived" update="REPLACE" /></td>
		</tr>
		<tr>
			<td>YAHOO</td><td><t:cometd.PushTarget topic="stocks/YAHOO" event="stockPriceReceived" update="REPLACE" /></td>
		</tr>
		<tr>
			<td>IBM</td><td><t:cometd.PushTarget topic="stocks/IBM" event="stockPriceReceived" update="REPLACE" /></td>
		</tr>
		<tr>
			<td>SONY</td><td><t:cometd.PushTarget topic="stocks/SONY" event="stockPriceReceived" update="REPLACE" /></td>
		</tr>
	</table>

	<t:block t:id="stockPriceBlock">
		<font color="red">${stockPrice.price}</font>
	</t:block>
</html>
